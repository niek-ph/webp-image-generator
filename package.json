{
  "name": "@niekph/webp-image-generator",
  "version": "1.1.0",
  "description": "A simple CLI tool and Vite plugin to generate WebP images from PNG/JPG files",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "webp-gen": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest --runInBand",
    "test:watch": "jest --watch --runInBand",
    "test:coverage": "jest --coverage --runInBand",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prepublishOnly": "npm run lint && npm run format:check && npm run build && npm test",
    "pretest": "npm run build",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "webp",
    "image",
    "converter",
    "cli",
    "vite-plugin",
    "optimization"
  ],
  "author": "Niek Poorthuis niek@appcenternederland.nl",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/niek-ph/webp-image-generator.git"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "commander": "^11.0.0",
    "glob": "^11.0.3",
    "sharp": "^0.34.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.32.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "globals": "^16.3.0",
    "jest": "^29.5.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ],
    "maxWorkers": 1,
    "testTimeout": 10000,
    "setupFilesAfterEnv": [
      "<rootDir>/tests/jest.setup.ts"
    ]
  }
}
